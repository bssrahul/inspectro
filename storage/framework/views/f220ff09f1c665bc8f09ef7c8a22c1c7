<?php $__env->startSection('content-header'); ?>
	<h1>
		All Categories (<?php echo $categories->count(); ?>)
		&middot;
		<small><?php echo link_to_route('admin.categories.create', 'Add New'); ?></small>
	</h1>
<?php $__env->stopSection(); ?>

<?php $__env->startSection('content'); ?>

	<table class="table">
		<thead>
			<th>No</th>
			<th>Title</th>
			<th>Description</th>
			<th>Status</th>
			<th>Created At</th>
			<th class="text-center">Action</th>
		</thead>
		<tbody>
			<?php foreach($categories as $category): ?>
			<tr>
				<td><?php echo $no; ?></td>
				<td><?php echo $category->title; ?></td>
				<td><?php echo $category->description; ?></td>
				<td><?php echo $category->status; ?></td>
				<td><?php echo $category->created_at; ?></td>
				<td class="text-center">
					<a href="<?php echo route('admin.categories.edit', $category->id); ?>">Edit</a>
					&middot;
					<?php echo $__env->make('admin::partials.modal', ['data' => $category, 'name' => 'categories'], array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>
				</td>
			</tr>
			<?php $no++ ;?>
			<?php endforeach; ?>
		</tbody>
	</table>

	<div class="text-center">
		<?php echo pagination_links($categories); ?>

	</div>
<?php $__env->stopSection(); ?>

<?php echo $__env->make($layout, array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>