<?php $__env->stopSection(); ?>

<?php $__env->startSection('content'); ?>

	<table class="table">
		<thead>
			<th>No</th>
			<th>Answer</th>
			<th>Question</th>
			<th>Next Question</th>
			<th>Custom Answer</th>
			
			
			<th>Created At</th>
			<th class="text-center">Action</th>
		</thead>
		<tbody>
			<?php foreach($answers as $k=>$answer): ?>
			<tr>
				<td><?php echo $no; ?></td>
				<td><?php echo $answer->answers; ?></td>
				<td><?php echo $answer->question->title; ?></td>
				<td>
					<?php if(!empty($answer->next_question_id) ): ?>
						<?php echo $answer->nextQuestion->title; ?>

					<?php else: ?>
						<span class='label label-deactive '>Not Available</span>
					<?php endif; ?>
				</td>
				<td><?php if($answer->custom_answer == '1'): ?>
							<span class='label label-active'>Allow</span>
					<?php else: ?>
					  <span class='label label-deactive '>Not Allow</span>
					<?php endif; ?>
				
				</td>
			
			
				<td><?php echo date('F d, Y', strtotime($answer->created_at)); ?></td>
				<td class="text-center">
					<?php if(!empty($qid)): ?>
						<a href="<?php echo route('admin.answers.edit', [$answer->id,'ques_id'=>$qid,'opt'=>$k]); ?>">Edit</a>
					<?php else: ?>
						<a href="<?php echo route('admin.answers.edit', [$answer->id,'opt'=>$k]); ?>">Edit</a>
					<?php endif; ?>
					
					&middot;
					<?php echo $__env->make('admin::partials.modal', ['data' => $answer, 'name' => 'answers'], array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>
				</td>
			</tr>
			<?php $no++ ;?>
			<?php endforeach; ?>
		</tbody>
	</table>

	<div class="text-center">
		<?php echo pagination_links($answers); ?>

	</div>
