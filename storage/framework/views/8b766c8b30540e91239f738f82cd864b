	<script src="<?php echo admin_asset('components/jquery/jquery.validate.js'); ?>" type="text/javascript"></script>
	<script type="text/javascript">
			$(document).ready(function() {
				$('#ServiceForm').validate();
			});
	</script>
<?php $__env->stopSection(); ?>