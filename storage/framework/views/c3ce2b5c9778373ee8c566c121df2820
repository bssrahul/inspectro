<?php $__env->startSection('content-header'); ?>
	<h1>
		
		
		All Question (<?php echo count($categories); ?>)
		&middot;
	
	</h1>
<?php $__env->stopSection(); ?>

<?php $__env->startSection('content'); ?>

	<table class="table">
		<thead>
			<th>No</th>
			<th>Question</th>
			<th> Services </th>
			<th>Status</th>
			<th>Created Date</th>
			<th class="text-center">Action</th>
		</thead>
		<tbody>

			<?php foreach($categories as $k=>$category): ?>
			<tr>
				<td><?php echo $k+1; ?></td>
				<td><?php echo $category->title; ?></td>
				
				<td><?php if($category->status == '1'): ?>
							<span class='label label-active'>Active</span>
					<?php else: ?>
					  <span class='label label-deactive '>Deactive</span>
					<?php endif; ?>
				
				</td>
				<td><?php echo date('F d, Y', strtotime($category->created_at)); ?></td >
				
				
				
				<td class="text-center">
				
					<?php 	
						if(in_array($category->id,$catIdArr)){ ?>
								<?php echo link_to_route('admin.sqoptions.index', 'View Options', [ 'ques_id' =>$category->id ]); ?>

						<?php }else{ ?>
								<?php echo link_to_route('admin.sqoptions.index', 'Add Options', [ 'que_id' =>$category->id ]); ?>

						<?php } ?>
					&middot;
						<a href="<?php echo route('admin.categories.edit', [$category->id,'type' => 'question']); ?>">Edit</a>
					&middot;
					<?php echo $__env->make('admin::partials.modal', ['data' => $category, 'name' => 'categories'], array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>
				</td>
				
			</tr>
			
			<?php endforeach; ?>
		</tbody>
	</table>

	<div class="text-center">
		<?php echo pagination_links($categories); ?>

	</div>
<?php $__env->stopSection(); ?>
