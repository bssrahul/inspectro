<?php $__env->startSection('content-header'); ?>
	<h1>
		All Questions (<?php echo $questions->count(); ?>)
		&middot;
		<small><?php echo link_to_route('admin.questions.create', 'Add New'); ?></small>
	</h1>
<?php $__env->stopSection(); ?>

<?php $__env->startSection('content'); ?>

	<table class="table">
		<thead>
			<th>No</th>
			<th>Title</th>
			<th>Description</th>
		
			<th>Created At</th>
			<th class="text-center">Action</th>
		</thead>
		<tbody>
			<?php foreach($questions as $question): ?>
			<tr>
				<td><?php echo $no; ?></td>
				<td><?php echo $question->title; ?></td>
				<td><?php echo $question->description_1; ?></td>
				
				<td><?php echo date('F d, Y', strtotime($question->created_at)); ?></td>
				<td class="text-center">
				
					<?php if($question->avail == 1 ): ?>
							<?php echo link_to_route('admin.answers.index', 'View Answers', [ 'ques_id' =>$question->id ]); ?>

					<?php else: ?>
							<?php echo link_to_route('admin.answers.create', 'Add Answers', [ 'que_id' =>$question->id,'opt'=>$question->id ]); ?>

					<?php endif; ?>
					&middot;
					<a href="<?php echo route('admin.questions.edit', $question->id); ?>">Edit</a>
					&middot;
					<?php echo $__env->make('admin::partials.modal', ['data' => $question, 'name' => 'questions'], array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>
				</td>
			</tr>
			<?php $no++ ;?>
			<?php endforeach; ?>
		</tbody>
	</table>

	<div class="text-center">
		<?php echo pagination_links($questions); ?>

	</div>
<?php $__env->stopSection(); ?>

